<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeSphere.Home"
             Title="Home">
    <VerticalStackLayout>
        <Button
                x:Name="ParcelrBtn"
                Text="PARCEL" 
                Clicked="OnParcelClicked"
                HorizontalOptions="Center" 
                VerticalOptions="Start"/>
        <Button
                x:Name="RepairrBtn"
                Text="REPAIR" 
                Clicked="OnRepairClicked"
                HorizontalOptions="Center"
                VerticalOptions="End"/>
    </VerticalStackLayout>
</ContentPage>